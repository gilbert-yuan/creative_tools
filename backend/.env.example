# 数据库配置
DATABASE_URL=postgresql://用户名@localhost/video_tools

# Gemini API 配置 (支持第三方供应商)
GEMINI_BASE_URL=your_api_base_url
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-3-pro-image-preview
GEMINI_ENDPOINT=/v1beta/models/{model}:generateContent

# VEO API 配置 (支持第三方供应商)
VEO_BASE_URL=YOUR_API_BASE_URL
VEO_API_KEY=your_veo_api_key_here
VEO_MODEL=veo_3_1-fast
VEO_CREATE_ENDPOINT=/v1/video/create
VEO_QUERY_ENDPOINT=/v1/video/query

# GPT-nano API 配置 (可选, 用于角色名称等的文本补全)
GPT_NANO_BASE_URL=YOUR_API_BASE_URL
GPT_NANO_API_KEY=your_gpt_nano_api_key_here
GPT_NANO_ENDPOINT=/v1/responses

# Cloudflare R2 存储配置 (图片 CDN)
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=your_bucket_name
R2_PUBLIC_URL=https://your-cdn-url.com
